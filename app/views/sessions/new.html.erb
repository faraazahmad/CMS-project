<div class="container">
	<br><br><br>
	<h1 class="title is-size-1">Sign In</h1>

	<div class="row">
	  <div>
	    <%= form_for(:session, url: login_path) do |f| %>
	    	      
			<div class="field">
			  <label class="label">Enter UID</label>
			  <div class="control">
			    <%= f.text_field :id, class: "input" %>
			  </div>
			</div>

			<div class="field">
				<label class="label">Password</label>
				<div class="control">
			      <%= f.password_field :password, class: "input" %>
				</div>
			</div>

			<br>
	      	<%= f.submit "Sign In", class: "button is-link is-large" %>
	    <% end %>
	  </div>
	</div>
	<br>
	<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	<br><br><br>
</div>